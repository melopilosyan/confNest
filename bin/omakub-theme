# vi:ft=sh:

# Pick a preconfigured theme
THEME=$(gum choose "Tokyo Night" "Nord" "Everforest" --header "Choose the theme" --height 5)

[ -z "$THEME" ] && exit 0

# Install the theme in Gnome, Kitty and Neovim
source "$CONFIGS_DIR/themes/gnome/_set.sh"
source "$CONFIGS_DIR/themes/kitty/_set.sh"
#cp "$CONFIGS_DIR/themes/neovim/$THEME.lua" ~/.config/nvim/lua/plugins/theme.lua

echo "$THEME theme installed."
