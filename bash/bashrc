HISTSIZE=32768
HISTFILESIZE=$HISTSIZE

declare -x VISUAL
VISUAL=$(which lvim)
export EDITOR="$VISUAL"
export SUDO_EDITOR=vim

PATH="./bin:$PATH"
[ -d ~/.cargo/bin ] && PATH="$PATH:$HOME/.cargo/bin"

command -v fzf > /dev/null && source /usr/share/doc/fzf/examples/key-bindings.bash

export NVM_DIR=~/.nvm
# Load but postpone using NVM until its manually used
test -s ~/.nvm/nvm.sh && source "$_" --no-use

[ -s ~/.rvm/scripts/rvm ] && source ~/.rvm/scripts/rvm

source "$CONFIGS_DIR/bash/functions.sh"
source_all "$CONFIGS_DIR"/bash/rc.d/*.sh

# Zoxide init script must be evaluated at the very end
command -v zoxide >/dev/null && eval "$(zoxide init --cmd cd bash)"

saysomething
